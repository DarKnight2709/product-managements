mixin alert-success(time)
  - if (messages.success)
      .container
        div(
          class="alert alert-success"
          data-time=time
          show-alert
        ) #{messages.success} <span class="close" close-alert>&times;</span>

mixin alert-error(time)
  - if (messages.error)
      .container
        div(
          class="alert alert-danger"
          data-time=time
          show-alert
        ) #{messages.error} <span class="close" close-alert>&times;</span>
